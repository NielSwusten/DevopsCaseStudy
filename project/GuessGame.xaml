<Window x:Class="project.GuessGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="GuessGame" Height="450" Width="800">
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Guess the Number Game" FontWeight="Bold" FontSize="18" Margin="0 0 0 10"/>
            <Label Content="Enter your guess:"/>
            <TextBox Name="guessTextBox" Width="100" Margin="0 0 0 10"/>
            <Button Content="Submit Guess" Click="SubmitGuess_Click" Width="91"/>
            <Label Name="resultLabel" Content=""/>

        </StackPanel>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Back" Click="BackButton_Click" Margin="571,336,120,63" Height="22" Width="56" />
        </StackPanel>


    </Grid>
</Window>
